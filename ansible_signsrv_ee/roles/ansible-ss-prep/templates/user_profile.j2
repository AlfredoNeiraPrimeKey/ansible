# Get the aliases and functions
if [ -f ~/.bashrc ]; then
	. ~/.bashrc
fi

# User specific environment and startup programs

# SignServer variables
APPSRV_HOME={{ wildfly_home| default('/opt/wildfly') }}
signsvr_home={{ signsvr_home| default('/opt/signsrv') }}
JAVA_HOME=/usr/lib/jvm/java
ANT_HOME=/usr/share/ant 
SIGNSERVER_NODEID={{ inventory_hostname }}
CLASSPATH=/opt/ejbca:$CLASSPATH

PATH=$PATH:$HOME/.local/bin:$HOME/bin:${APPSRV_HOME}/bin:${signsvr_home}/bin:${JAVA_HOME}/bin:${ANT_HOME}/bin:$PATH
export PATH APPSRV_HOME signsvr_home JAVA_HOME JAVA_OPTS ANT_HOME SC_READER CS_DEVICE CLASSPATH SIGNSERVER_NODEID